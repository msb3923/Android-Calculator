            android:layout_margin="8dp"
            android:background="@drawable/operation_buttons"
            android:textSize="32sp"
            android:onClick="onClick"
            android:text="/"
            app:layout_column="4"
            app:layout_row="0" />

        <Button
            android:id="@+id/mult"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_margin="8dp"
            android:background="@drawable/operation_buttons"
            android:textSize="32sp"
            android:onClick="onClick"
            android:text="*"
            app:layout_column="4"
            app:layout_row="1" />

        <Button
            android:id="@+id/subtract"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_margin="8dp"
            android:background="@drawable/operation_buttons"
            android:textSize="32sp"
            android:onClick="onClick"
            android:text="-"
            app:layout_column="3"
            app:layout_row="2" />

        <Button
            android:id="@+id/add"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_margin="8dp"
            android:background="@drawable/operation_buttons"
            android:textSize="32sp"
            android:onClick="onClick"
            android:text="+"
            app:layout_column="4"
            app:layout_row="2" />

        <Button
            android:id="@+id/equal"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_margin="8dp"
            android:background="@drawable/operation_buttons"
            android:textSize="32sp"
            android:onClick="calculate"
            android:text="="
