            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_margin="8dp"
            android:background="@drawable/trig_buttons"
            android:textSize="32sp"
            android:onClick="onClick"
            android:text="tan"
            app:layout_column="5"
