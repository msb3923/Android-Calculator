            android:layout_height="65dp"
            android:layout_margin="8dp"
            android:background="@drawable/trig_buttons"
            android:textSize="32sp"
            android:onClick="onClick"
            android:text="sin"
            app:layout_column="5"
            app:layout_row="0" />


        <Button
            android:id="@+id/cos"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_margin="8dp"
            android:background="@drawable/trig_buttons"
            android:textSize="32sp"
            android:onClick="onClick"
            android:text="cos"
            app:layout_column="5"
            app:layout_row="1" />

        <Button
            android:id="@+id/seven"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_margin="8dp"
            android:background="@drawable/number_buttons"
            android:textSize="32sp"
            android:onClick="onClick"
            android:text="7"
            app:layout_column="1"
            app:layout_row="0" />

        <Button
